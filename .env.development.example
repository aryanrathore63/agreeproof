# AgreeProof Development Environment Configuration
# Copy this file to .env.development and fill in the actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
APP_NAME=AgreeProof Development
APP_VERSION=1.0.0-dev
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# =============================================================================
# FRONTEND CONFIGURATION (REACT)
# =============================================================================
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0-dev
REACT_APP_BUILD_TIME=2024-01-01T00:00:00Z
REACT_APP_SENTRY_DSN=
REACT_APP_GOOGLE_ANALYTICS_ID=

# Enable hot reloading and dev tools
REACT_APP_FAST_REFRESH=true
REACT_APP_DISABLE_ESLINT_PLUGIN=true

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
PORT=3001
HOST=localhost

# Development server configuration
DEV_SERVER_PORT=3001
DEV_SERVER_HOST=localhost
DEV_SERVER_HTTPS=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/agreeproof_development
MONGODB_DB_NAME=agreeproof_development

# Database connection options (development)
MONGODB_MAX_POOL_SIZE=5
MONGODB_MIN_POOL_SIZE=1
MONGODB_MAX_IDLE_TIME_MS=10000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=3000
MONGODB_SOCKET_TIMEOUT_MS=30000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=dev-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=dev-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Password hashing (development - lower for faster testing)
BCRYPT_ROUNDS=10

# CORS configuration (development - more permissive)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Rate limiting (development - more lenient)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Development - use email testing service or disable
EMAIL_SERVICE=development
EMAIL_FROM=dev@agreeproof.local
EMAIL_REPLY_TO=dev@agreeproof.local

# Mailtrap (for development testing)
MAILTRAP_HOST=smtp.mailtrap.io
MAILTRAP_PORT=2525
MAILTRAP_USER=your-mailtrap-username
MAILTRAP_PASS=your-mailtrap-password

# Ethereal (for development testing)
ETHEREAL_HOST=smtp.ethereal.email
ETHEREAL_PORT=587
ETHEREAL_USER=your-ethereal-user
ETHEREAL_PASS=your-ethereal-password

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# Development - use local storage
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./uploads
LOCAL_STORAGE_URL=http://localhost:3001/uploads

# AWS S3 (optional for development testing)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=agreeproof-dev-documents
AWS_S3_URL=

# =============================================================================
# REDIS CONFIGURATION (optional for development)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=agreeproof:dev:
REDIS_TTL=300

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_FILE=logs/development.log
LOG_MAX_SIZE=5m
LOG_MAX_FILES=3

# Console logging
LOG_CONSOLE=true
LOG_COLORIZE=true
LOG_TIMESTAMP=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Disabled in development
SENTRY_DSN=
DATADOG_API_KEY=
NEW_RELIC_LICENSE_KEY=

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Stripe (test mode)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-test-key
STRIPE_SECRET_KEY=sk_test_your-stripe-test-secret
STRIPE_WEBHOOK_SECRET=

# PayPal (sandbox mode)
PAYPAL_CLIENT_ID=your-paypal-sandbox-client-id
PAYPAL_CLIENT_SECRET=your-paypal-sandbox-client-secret
PAYPAL_MODE=sandbox

# Twilio (test mode)
TWILIO_ACCOUNT_SID=your-twilio-test-account-sid
TWILIO_AUTH_TOKEN=your-twilio-test-auth-token
TWILIO_PHONE_NUMBER=+15005550006

# =============================================================================
# API KEYS & EXTERNAL SERVICES
# =============================================================================
# Google APIs (development)
GOOGLE_CLIENT_ID=your-google-dev-client-id
GOOGLE_CLIENT_SECRET=your-google-dev-client-secret
GOOGLE_API_KEY=your-google-dev-api-key

# Facebook/Meta (development)
FACEBOOK_APP_ID=your-facebook-dev-app-id
FACEBOOK_APP_SECRET=your-facebook-dev-app-secret

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_EMAIL_VERIFICATION=false
FEATURE_SMS_NOTIFICATIONS=false
FEATURE_SOCIAL_LOGIN=true
FEATURE_PAYMENT_PROCESSING=false
FEATURE_ANALYTICS=false
FEATURE_PERFORMANCE_MONITORING=false

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
DEBUG=agreeproof:*
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
MOCK_EXTERNAL_APIS=true

# Auto-reload configuration
NODEMON=true
NODEMON_IGNORE=node_modules,logs,uploads,coverage

# =============================================================================
# SECURITY HEADERS (relaxed for development)
# =============================================================================
HELMET_CONTENT_SECURITY_POLICY=false
HELMET_HSTS_MAX_AGE=0
HELMET_NO_SNIFF=false
HELMET_FRAMEGUARD=false
HELMET_XSS_FILTER=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TEST_DATABASE_URL=mongodb://localhost:27017/agreeproof_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_JWT_SECRET=test-jwt-secret

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
COMPRESSION_ENABLED=false
COMPRESSION_LEVEL=1
STATIC_CACHE_MAX_AGE=0
API_CACHE_TTL=0

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Enable development middleware
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_TIME=true
ENABLE_ERROR_STACK_TRACES=true
ENABLE_SQL_LOGGING=false

# Browser sync (for frontend development)
BROWSER_SYNC=true
BROWSER_SYNC_PORT=3002
BROWSER_SYNC_PROXY=localhost:3001

# =============================================================================
# LOCAL SERVICES
# =============================================================================
# Docker services (if using Docker Compose)
DOCKER_COMPOSE_FILE=docker-compose.dev.yml
MONGODB_DOCKER_PORT=27017
REDIS_DOCKER_PORT=6379

# =============================================================================
# SEED DATA
# =============================================================================
# Enable database seeding
ENABLE_SEEDING=true
SEED_DATA_PATH=./scripts/seed-data
SEED_ADMIN_EMAIL=admin@agreeproof.local
SEED_ADMIN_PASSWORD=admin123

# =============================================================================
# DEVELOPMENT SHORTCUTS
# =============================================================================
# Skip authentication for development
SKIP_AUTH=false
SKIP_EMAIL_VERIFICATION=true
SKIP_RATE_LIMITING=true

# Enable debug endpoints
ENABLE_DEBUG_ENDPOINTS=true
DEBUG_ENDPOINT_PREFIX=/debug

# =============================================================================
# LOCAL SSL (optional)
# =============================================================================
USE_LOCAL_SSL=false
SSL_CERT_PATH=./certs/localhost.crt
SSL_KEY_PATH=./certs/localhost.key