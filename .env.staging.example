# AgreeProof Staging Environment Configuration
# Copy this file to .env.staging and fill in the actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=staging
APP_NAME=AgreeProof Staging
APP_VERSION=1.0.0
APP_URL=https://agreeproof-staging.vercel.app
API_URL=https://agreeproof-staging.onrender.com

# =============================================================================
# FRONTEND CONFIGURATION (REACT)
# =============================================================================
REACT_APP_API_BASE_URL=https://agreeproof-staging.onrender.com/api
REACT_APP_ENVIRONMENT=staging
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_TIME=2024-01-01T00:00:00Z
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
PORT=3000
HOST=0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/agreeproof_staging?retryWrites=true&w=majority
MONGODB_DB_NAME=agreeproof_staging

# Database connection options
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=45000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-for-staging-environment
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-for-staging
JWT_REFRESH_EXPIRES_IN=30d

# Password hashing
BCRYPT_ROUNDS=12

# CORS configuration
CORS_ORIGIN=https://agreeproof-staging.vercel.app
CORS_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_SERVICE=SendGrid
EMAIL_FROM=noreply@agreeproof-staging.com
EMAIL_REPLY_TO=support@agreeproof-staging.com

# SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_TEMPLATE_AGREEMENT_CREATED=d-your-template-id
SENDGRID_TEMPLATE_AGREEMENT_SIGNED=d-your-template-id
SENDGRID_TEMPLATE_PASSWORD_RESET=d-your-template-id

# SMTP (alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=agreeproof-staging-documents
AWS_S3_URL=https://agreeproof-staging-documents.s3.amazonaws.com

# Cloudinary (alternative)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# =============================================================================
# REDIS CONFIGURATION (for caching and sessions)
# =============================================================================
REDIS_URL=redis://username:password@your-redis-host:6379
REDIS_PREFIX=agreeproof:staging:
REDIS_TTL=3600

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/staging.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=staging

# DataDog
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# New Relic
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME=AgreeProof Staging

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Stripe (for payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# API KEYS & EXTERNAL SERVICES
# =============================================================================
# Google APIs
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_API_KEY=your-google-api-key

# Facebook/Meta
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_EMAIL_VERIFICATION=true
FEATURE_SMS_NOTIFICATIONS=false
FEATURE_SOCIAL_LOGIN=true
FEATURE_PAYMENT_PROCESSING=false
FEATURE_ANALYTICS=true
FEATURE_PERFORMANCE_MONITORING=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
DEBUG=agreeproof:*
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
MOCK_EXTERNAL_APIS=false

# =============================================================================
# SECURITY HEADERS
# =============================================================================
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_HSTS_MAX_AGE=31536000
HELMET_NO_SNIFF=true
HELMET_FRAMEGUARD=true
HELMET_XSS_FILTER=true

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=agreeproof-staging-backups

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
STATIC_CACHE_MAX_AGE=86400
API_CACHE_TTL=300

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================
PRIVACY_POLICY_URL=https://agreeproof-staging.vercel.app/privacy
TERMS_OF_SERVICE_URL=https://agreeproof-staging.vercel.app/terms
COOKIE_POLICY_URL=https://agreeproof-staging.vercel.app/cookies
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true